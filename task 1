<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Strength Checker</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"></link>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-100 font-roboto">
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
            <h2 class="text-2xl font-bold mb-6 text-center">Password Strength Checker</h2>
            <div class="mb-4">
                <label for="password" class="block text-gray-700 font-medium mb-2">Enter Password</label>
                <input type="password" id="password" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter your password">
            </div>
            <div id="strengthMessage" class="text-center mb-4"></div>
            <div class="flex justify-between items-center">
                <button id="checkStrength" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Check Strength</button>
                <div id="strengthIndicator" class="flex items-center">
                    <span class="text-gray-700 font-medium mr-2">Strength:</span>
                    <div class="w-24 h-4 bg-gray-200 rounded-full overflow-hidden">
                        <div id="strengthBar" class="h-full bg-red-500"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('checkStrength').addEventListener('click', function() {
            const password = document.getElementById('password').value;
            const strengthMessage = document.getElementById('strengthMessage');
            const strengthBar = document.getElementById('strengthBar');
            let strength = 0;

            if (password.length >= 8) strength += 1;
            if (/[A-Z]/.test(password)) strength += 1;
            if (/[a-z]/.test(password)) strength += 1;
            if (/[0-9]/.test(password)) strength += 1;
            if (/[^A-Za-z0-9]/.test(password)) strength += 1;

            switch (strength) {
                case 0:
                    strengthMessage.textContent = 'Very Weak';
                    strengthBar.style.width = '0%';
                    strengthBar.className = 'h-full bg-red-500';
                    break;
                case 1:
                    strengthMessage.textContent = 'Weak';
                    strengthBar.style.width = '20%';
                    strengthBar.className = 'h-full bg-red-500';
                    break;
                case 2:
                    strengthMessage.textContent = 'Fair';
                    strengthBar.style.width = '40%';
                    strengthBar.className = 'h-full bg-yellow-500';
                    break;
                case 3:
                    strengthMessage.textContent = 'Good';
                    strengthBar.style.width = '60%';
                    strengthBar.className = 'h-full bg-yellow-500';
                    break;
                case 4:
                    strengthMessage.textContent = 'Strong';
                    strengthBar.style.width = '80%';
                    strengthBar.className = 'h-full bg-green-500';
                    break;
                case 5:
                    strengthMessage.textContent = 'Very Strong';
                    strengthBar.style.width = '100%';
                    strengthBar.className = 'h-full bg-green-500';
                    break;
            }
        });
    </script>
</body>
</html>
